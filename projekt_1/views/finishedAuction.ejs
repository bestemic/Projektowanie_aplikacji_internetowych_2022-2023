<%- include('inc/header'); -%>

<div class="container">
    <h2 class="text-center mt-5 mb-3">Szczegóły zakończonego przetargu</h2>
    <% if(auction.id){ %>
        <div class="card">
            <div class="card-header text-center text-white bg-dark">
                <h3 class="card-title mb-0"><%= auction.name %></h3>
            </div>
            <div class="card-body text-center">
                <div class="row">
                    <div class="col">
                        <h5><b>Instytucja zamawiająca</b></h5>
                        <p><%= auction.purchaser %></p>
                        <hr class="bg-dark border-2 border-top border-dark">

                        <h5><b>Opis</b></h5>
                        <p style="text-align: justify"><%= auction.description %></p>
                        <hr class="bg-dark border-2 border-top border-dark">

                        <div class="row">
                            <div class="col">
                                <h5><b>Data rozpoczęcia</b></h5>
                                <p><%= new Date(auction.start).toLocaleString() %></p>
                            </div>
                            <div class="col">
                                <h5><b>Data zakończenia</b></h5>
                                <p><%= new Date(auction.end).toLocaleString() %></p>
                            </div>
                        </div>
                    </div>
                    <div class="col border-start border-3">
                        <% if(auction.offers.length !== 0){ %>
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">Złożone oferty</h5>
                                </div>
                                <div class="card-body">
                                    <table class="table table-bordered mb-0">
                                        <thead class="table-secondary text-center">
                                        <tr>
                                            <th>Lp.</th>
                                            <th>Wykonawca</th>
                                            <th>Data złożenia</th>
                                            <th>Wartość</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <% for (var i = 0; i < auction.offers.length; i++) { %>
                                            <tr>
                                                <td><b><%= i + 1 %></b></td>
                                                <td><%= auction.offers[i].contractor %></td>
                                                <td><%= new Date(auction.offers[i].addTime).toLocaleString() %></td>
                                                <td><%= auction.offers[i].value %></td>
                                            </tr>
                                        <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        <% } else { %>
                            <div class="alert alert-dark mt-4" role="alert">
                                <h3 class="text-center mt-5 mb-5">Przetarg zakończony bez rozstrzygnięcia</h3>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <h4 class="text-center mt-5">Przetarg nie został zakończony lub nie istnieje</h4>
    <% } %>
</div>

<%- include('inc/footer'); -%>