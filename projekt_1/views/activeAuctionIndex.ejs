<%- include('inc/header'); -%>

<div class="container">
    <h2 class="text-center mt-5 mb-3">Aktywne przetargi</h2>
    <div class="card">
        <div class="card-body">
            <% if(data.length === 0){ %>
                <div class="alert alert-info mb-0" role="alert">
                    Nie znaleziono aktywnych przetargów.
                </div>
            <% } else {%>
                <table class="table table-striped table-bordered">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Lp</th>
                            <th class="w-50">Nazwa</th>
                            <th class="w-25">Data rozpoczęcia</th>
                            <th class="w-25">Data zakończenia</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach((auction) => { %>
                            <tr>
                                <td><b><%= auction.id %></b></td> <!-- TODO id or lp in table-->
                                <td><a href="/auctions/active/<%= auction.id %>"><%= auction.name %></a></td>
                                <td class="text-center"><%= new Date(auction.start).toLocaleString() %></td>
                                <td class="text-center"><%= new Date(auction.end).toLocaleString() %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </div>
</div>

<%- include('inc/footer'); -%>