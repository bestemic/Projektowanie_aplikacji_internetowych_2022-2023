<%- include('inc/header'); -%>

<div class="container">
    <h2 class="text-center mt-5 mb-3">Aktywne przetargi</h2>
    <div class="card">
        <div class="card-body">
            <% if(auctions.length === 0){ %>
                <div class="alert alert-info mb-0" role="alert">
                    Nie znaleziono aktywnych przetargów.
                </div>
            <% } else {%>
                <table class="table table-striped table-bordered mb-0">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Lp.</th>
                            <th class="w-50">Nazwa</th>
                            <th>Data rozpoczęcia</th>
                            <th>Data zakończenia</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i = 0; i < auctions.length; i++) { %>
                            <tr>
                                <td><b><%= i+1 %></b></td>
                                <td><a href="/auctions/active/<%= auctions[i].id %>"><%= auctions[i].name %></a></td>
                                <td class="text-center"><%= new Date(auctions[i].start).toLocaleString() %></td>
                                <td class="text-center"><%= new Date(auctions[i].end).toLocaleString() %></td>
                                <td class="text-center"><%= auctions[i].isStarted ? 'AKTYWNY' : 'NIEAKTYWNY' %></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </div>
</div>

<%- include('inc/footer'); -%>