<%- include('inc/header'); -%>

<div class="container">
    <h2 class="text-center mt-5 mb-3">Zakończone przetargi</h2>
    <div class="card">
        <div class="card-body">
            <% if(auctions.length === 0){ %>
                <div class="alert alert-info mb-0" role="alert">
                    Nie znaleziono zakończonych przetargów.
                </div>
            <% } else {%>
                <table class="table table-striped table-bordered mb-0">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Lp.</th>
                            <th class="w-75">Nazwa</th>
                            <th>Status</th>
                            <th>Szczegóły</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i = 0; i < auctions.length; i++) { %>
                            <tr>
                                <td><b><%= i+1 %></b></td>
                                <td><a href="/auctions/finished/<%= auctions[i].id %>"><%= auctions[i].name %></a></td>
                                <td class="text-center">ZAKOŃCZONY</td>
                                <td class="text-center"><a class="btn-dark btn-sm" href="/auctions/finished/<%= auctions[i].id %>" role="button">Szczegóły</a></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </div>
</div>

<%- include('inc/footer'); -%>